    ></script>
    <link rel="stylesheet" href="styles.css" />
  </head>

  <body class="dash-body">
    <!-- photo -->
    <!-- <div id="steg-photo"><img src="/assets/photo/t-rex" /></div> -->

    <nav class="">
      <ul class="nav nav-pills justify-content-end">
        <li class="nav-item">
          <a class="nav-link" href="/collector">Collection</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/congrat">Credit Score</a>
        </li>
      </ul>
    </nav>

    <div class="container">
      <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
          <div class="card card-signin flex-row my-5">
            <div class="card-img-left d-none d-md-flex bg-image">
              <!-- Background image for card set in CSS! -->
            </div>
            <div class="card-body">
              <h3 class="login-heading mb-4">
                Hi <span id="login-name"> <%= data.name %></span> !
              </h3>
              <div class="container">
                <div class="row">
                  <div class="col-sm">
                    <form class="form-signin">
                      <div class="form-label-group">
                        <input
                          type=""
                          id=""
                          class="form-control"
                          placeholder="amount"
                          required
                        />
                        <button
                          class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2"
                          type="submit"
                        >
                          $ In!
                        </button>
                      </div>
                    </form>
                  </div>
                  <div class="col-sm">
                    <form class="form-signin">
                      <div class="form-label-group">
                        <input
                          type=""
                          id=""
                          class="form-control"
                          placeholder="amount"
                          required
                        />
                        <button
                          class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2"
                          type="submit"
                        >
                          $ out!
                        </button>
                      </div>
                    </form>
                  </div>
                </div>
                <p>Your current balance: $<%= data.currentBalance %></p>
                <p>Goal: $<%= data.cost %></p>
                <p>Goal Name: <%= data.goal %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="budget-container ">
      <div
        class="time-container card card-signin pb-5 pt-5 px-5 <% if ( parseInt(year) >= parseInt(data.cost)){%>yay<%}else{%> noo <% } %>  "
      >
        <div class="money-container py-5 px-3">
          <p>In a year: $<%= year %></p>
          <p class="yay-msg">yayy you can buy the <%= data.goal %> in a year</p>
          <p class="noo-msg">
            N00 you can't buy the <%= data.goal %> in a year
          </p>
        </div>
      </div>
      <div
        class="time-container card card-signin pb-5 pt-5 px-5 <% if (parseInt(month) >= parseInt(data.cost)){%> yay <%}else{%> noo <% } %>"
      >
        <div class="money-container py-5 px-3">
          <p>In a month: $<%= month %></p>
          <p class="yay-msg">
            yayy you can buy the <%= data.goal %> in a month
          </p>
          <p class="noo-msg">
            N00 you can't buy the <%= data.goal %> in a month
          </p>
        </div>
      </div>
    </div>
  </body>
</html>
